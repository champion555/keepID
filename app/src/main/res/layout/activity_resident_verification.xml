<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ResidentVerificationActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.IDCardVerificationActivity">
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purpleColor">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residential Permit"
                android:textColor="@color/whiteColor"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <ScrollView
            android:id="@+id/captureRel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgResidentFront"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/ic_idcard_front" />
                <RelativeLayout
                    android:id="@+id/frontIDCameraIcon"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/cameraFrontIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_camera"/>
                    <TextView
                        android:id="@+id/txtFrontIDCard"
                        android:layout_below="@+id/cameraFrontIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capture Front ID Card"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/whiteColor"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/imgResidentBack"
                    android:layout_below="@id/imgResidentFront"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_idcard_back" />
                <RelativeLayout
                    android:id="@+id/backIDCameraIcon"
                    android:layout_below="@+id/imgResidentFront"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/camerabackIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_camera"/>
                    <TextView
                        android:id="@+id/txtBackIdCard"
                        android:layout_below="@+id/camerabackIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capture Back ID Card"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/whiteColor"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btnVerify"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/imgResidentBack"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/round_button"
                    android:text="Verification"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"/>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>