<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KYC_ProfileSetting">
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purpleColor">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Prorile"
            android:textColor="@color/whiteColor"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/nameMark"
                        android:layout_width="25dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgName"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_name_gray"/>
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/emailMark"
                        android:layout_width="@dimen/mark_icon"
                        android:layout_height="@dimen/mark_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgEmail"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_email_gray"/>
                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addressMark"
                        android:layout_width="@dimen/mark_icon"
                        android:layout_height="@dimen/mark_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Address"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgAddress"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_address_gray"/>
                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/phoneMark"
                        android:layout_width="@dimen/mark_icon"
                        android:layout_height="@dimen/mark_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Phone Number"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgPhone"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_phone_gray"/>
                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linIDDoc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/idMark"
                        android:layout_width="@dimen/mark_icon"
                        android:layout_height="@dimen/mark_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ID Documents Proof"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgID"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_identity_gray"/>
                    <TextView
                        android:id="@+id/txtIDDoc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linBirth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/birthMark"
                        android:layout_width="@dimen/mark_icon"
                        android:layout_height="@dimen/mark_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Date of Birthday"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgBirth"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_birthday_gray"/>
                    <TextView
                        android:id="@+id/txtBirth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linAddressDoc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_back"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addressdocMark"
                        android:layout_width="@dimen/mark_icon"
                        android:layout_height="@dimen/mark_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/mark_margin_left"
                        android:src="@drawable/ic_failed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Proof of Address"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"
                    android:background="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgproofAddress"
                        android:layout_width="@dimen/item_icon"
                        android:layout_height="@dimen/item_icon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_mark_left"
                        android:src="@drawable/ic_addressproof_gray"/>
                    <TextView
                        android:id="@+id/txtAddressDoc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>