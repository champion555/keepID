<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purpleColor"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:text="Setting"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pinkColor"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Base URL"
                    android:textSize="20dp"
                    android:textColor="@color/whiteColor"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/txtBaseURL"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="here is the base url"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Key"
                    android:textSize="20dp"
                    android:textColor="@color/whiteColor"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/txtApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="here is the api key"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Secret Key"
                    android:textSize="20dp"
                    android:textColor="@color/whiteColor"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/txtSecretKey"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="here is the secret key"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="20dp"
                    android:textColor="@color/whiteColor"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="here is the user name"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>
            <Button
                android:id="@+id/btSave"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:text="Save"
                android:textSize="25dp"
                android:textColor="@color/whiteColor"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>