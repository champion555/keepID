<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PassportVerificatioinActivity">
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purpleColor">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passport Verification"
            android:textColor="@color/whiteColor"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/captureRel"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/passportImg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_passport"/>
        <Button
            android:id="@+id/btnVerification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/passportImg"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="Verification"
            android:textSize="16dp"
            android:textColor="@color/whiteColor"
            android:textAllCaps="false"
            android:background="@drawable/round_button"/>
        <RelativeLayout
            android:id="@+id/passportCameraIcon"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/cameraFrontIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_camera"/>
            <TextView
                android:id="@+id/txtPassport"
                android:layout_below="@+id/cameraFrontIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Capture Passport"
                android:layout_centerHorizontal="true"
                android:textColor="@color/whiteColor"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>