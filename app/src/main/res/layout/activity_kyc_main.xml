<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KYC_MainActivity"
    android:background="@color/pinkColor">
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/purpleColor">
        <ImageView
            android:id="@+id/btnKYCSetting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_setting"/>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_logo1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:gravity="center">
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnCreateID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_button"
                android:textColor="@color/whiteColor"
                android:textSize="20dp"
                android:text="Create Your Identity"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnRestore"
                android:layout_below="@+id/btnCreateID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_button"
                android:textColor="@color/whiteColor"
                android:text="Restore From Backup"
                android:textSize="20dp"
                android:textAllCaps="false"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>